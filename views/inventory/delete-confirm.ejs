<% if (title) { %>
<h1><%= title %></h1>
<p>Confirm Deletion - The delete is permanent.</p>
<% } %> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<div class="form-container">
  <form id="deleteForm" action="/inv/delete" method="post">
    <div class="form-group">
      <label for="classification_id">Classification:</label>
      <%- classificationList %>
    </div>

    <div class="form-group">
      <label for="inv_make">Make:</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        required
        value="<%= locals.inv_make ? inv_make : '' %>"
        readonly
      />
    </div>

    <div class="form-group">
      <label for="inv_model">Model:</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        required
        value="<%= locals.inv_model ? inv_model : '' %>"
        readonly
      />
    </div>

    <div class="form-group">
      <label for="inv_price">Price:</label>
      <input
        type="number"
        id="inv_price"
        name="inv_price"
        required
        min="0"
        step="0.01"
        value="<%= locals.inv_price ? inv_price : '' %>"
        readonly
      />
    </div>

    <div class="form-group">
      <label for="inv_year">Year:</label>
      <input
        type="number"
        id="inv_year"
        name="inv_year"
        required
        min="1900"
        max="2024"
        value="<%= locals.inv_year ? inv_year : '' %>"
        readonly
      />
    </div>

    <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>

    <div class="form-group">
      <button type="submit">Delete Vehicle</button>
    </div>
  </form>
</div>
