<% if (title) { %>
  <h1><%= title %></h1>
<% } %>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
      <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
      <% }) %>
  </ul>
<% } %>

<% if (typeof user !== "undefined" && user !== null) { %>
  <h2>Welcome <%= user.account_firstname %></h2>

  <p><a href="/account/update/<%= user.account_id %>">Update Account Information</a></p>

  <% if (user.account_type === "Employee" || user.account_type === "Admin") { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">Access Inventory Management</a></p>
  <% } %>
<% } else { %>
  <h2>Welcome Guest</h2>
<% } %>

<h1>You're logged in</h1>
